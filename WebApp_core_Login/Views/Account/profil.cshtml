
@{
    ViewData["Title"] = "profil";
}

<div class="row">
    <div class="col-md-4 offset-4">
        <h1>@ViewData["Title"]</h1>
    </div>
</div> 

<div class="row">
    <div class="col-md-6">
        <form method="post" action="profileImageSave" enctype="multipart/form-data">
            <div class="text-center">
                <img src="~/image/@ViewData["Image"]" width="200" />
            </div>
            <div class="form-group">
                <label class="form-label">profil resmi</label>
                <div class="input-group mb-3">
                    <input type="file" class="form-control" name="profileImage" placeholder="ad soyad" />
                    <button class="btn btn-outline-secondary" type="submit">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <form method="post" action="nameSurnameSave">
            <div class="form-group">
                <label class="form-label">ad soyad</label>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" name="nameSurname" value="@ViewData["useName"]" placeholder="ad soyad" />
                    <button class="btn btn-outline-secondary" type="submit">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <form method="post" action="userNameSave">
            <div class="form-group">
                <label class="form-label">kullanıcı adı</label>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" value=" @ViewData["userName"]" placeholder="kullanıcı ad" />
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <form method="post" action="passwordSave">
            <div class="form-group">
                <label class="form-label">şifre</label>
                <div class="input-group mb-3">
                    <input type="password" class="form-control" placeholder="şifre" value="@ViewData["password"]" />
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>


